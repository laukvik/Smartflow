{
  "name": "smartflow",
  "version": "0.1.3",
  "description": "A JavaScript library for creating SPA with ease",
  "main": "dist/commonjs/index.js",
  "module": "dist/es/index.js",
  "jsnext:main": "dist/es/index.js",
  "scripts": {
    "build": "npm run build:commonjs && npm run build:umd",
    "build:commonjs": "npm run clean:commonjs && babel ./src --out-dir dist/commonjs",
    "build:umd": "npm run clean:umd && webpack --config webpack.config.umd.js --bail",
    "babel": "babel src --out-dir dist/es",
    "clean": "npm run clean:commonjs && npm run clean:umd",
    "clean:commonjs": "rimraf dist/commonjs",
    "clean:umd": "rimraf dist/umd",
    "coverage": "jest --coverage --coverageDirectory=./dist/coverage",
    "docs": "jsdoc -c jsdoc.json",
    "eslint": "eslint ./src/*.js",
    "test": "jest test",
    "watch": "webpack --progress --colors --watch"
  },
  "jest": {
    "globals": {
      "__DEV__": true
    },
    "testRegex": "./test/.*.js$",
    "rootDir": "."
  },
  "watch": {
    "test": "{src}/*.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/laukvik/Smartflow.git"
  },
  "keywords": [
    "flow",
    "javascript",
    "application"
  ],
  "author": "Morten Laukvik",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/laukvik/Smartflow/issues"
  },
  "files": [
    "dist",
    "LICENSE"
  ],
  "homepage": "https://github.com/laukvik/Smartflow#readme",
  "dependencies": {},
  "devDependencies": {
    "eslint": "~3.19.0",
    "jsdoc": "~3.5.5",
    "babel-cli": "~6.24.1",
    "babel-core": "~6.25.0",
    "babel-loader": "~7.1.2",
    "babel-preset-env": "~1.6.1",
    "jest": "~21.1.0",
    "rimraf": "~2.6.2",
    "webpack": "~3.8.1"
  }
}
